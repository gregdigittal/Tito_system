<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="tito" id="payments-trip-create">
        <comment>Phase 8-4: User trips (tap-in/tap-out) for commuter history.</comment>
        <createTable tableName="trip">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="entity_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="tap_in_at" type="DATETIME"/>
            <column name="tap_out_at" type="DATETIME"/>
            <column name="route_id" type="INT"/>
            <column name="route_name" type="VARCHAR(255)"/>
            <column name="fare" type="DECIMAL(19, 2)"/>
            <column name="currency_id" type="INT"/>
            <column name="status" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="device_id" type="INT"/>
            <column name="created_date" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet author="tito" id="payments-trip-fk-entity">
        <addForeignKeyConstraint baseTableName="trip" baseColumnNames="entity_id"
            constraintName="fk_trip_entity_id" referencedTableName="entity" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT"/>
        <createIndex indexName="i_trip_entity_id" tableName="trip">
            <column name="entity_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
